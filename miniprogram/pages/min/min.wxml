<view class="weui-panel__bd" wx:if="{{flag}}" >
  <a class="weui-media-box weui-media-box_appmsg">
    <view class="weui-media-box__hd">
      <image class="weui-media-box__thumb" src="../../images/denglu.png"
        alt></image>
    </view>
    <view class="weui-media-box__bd">
     <button  class="user" open-type="getUserInfo" bindgetuserinfo="getUserInfo">登录/注册</button>
    </view>
  </a>
</view>

