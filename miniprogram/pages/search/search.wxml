<view class="page__bd">
  <view class="weui-search-bar {{inputShowed ? 'weui-search-bar_focusing' : ''}}" id="searchBar">
    <form class="weui-search-bar__form">
      <view class="weui-search-bar__box">
        <i class="weui-icon-search"></i>
        <input type="text" focus="true" auto-focus="{{true}}" class="weui-search-bar__input" bindconfirm="Search" placeholder="请输入小说名称" value="{{inputVal}}" focus="{{inputShowed}}" bindinput="inputTyping" />
        <span class="weui-icon-clear" bindtap="clearInput"></span>
      </view>
      <label class="weui-search-bar__label" bindtap="showInput">
        <i class="weui-icon-search"></i>
        <span class="weui-search-bar__text">搜索</span>
      </label>
    </form>
  </view>
</view>

<search class="chatroom" booktypea="{{list}}"> </search>